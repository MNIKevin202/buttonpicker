{
  "name": "streamingutilities",
  "version": "1.0.2",
  "description": "Streaming Utility",
  "main": "main.js",
  "author": "MNIKevin202",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MNIKevin202/streamingutilities"
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . BRChallengePicker --platform=win32 --arch=x64 --out=dist --overwrite",
    "build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@electron-forge/maker-squirrel": "^7.6.0",
    "electron": "^34.0.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "appId": "com.buttonpicker.streamingutilities",
    "productName": "ButtonPicker",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "MNIKevin202",
          "repo": "streamingutilities",
          "releaseType": "release"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BR Challenge Picker"
    }
  }
}
