{
  "name": "streamingutilities",
  "version": "1.0.5",
  "description": "Streaming Utility",
  "main": "main.js",
  "author": "MNIKevin202",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MNIKevin202/streamingutilities"
  },
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist build node_modules",
    "package": "electron-packager . BRChallengePicker --platform=win32 --arch=x64 --out=dist --overwrite",
    "build": "electron-builder",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@electron-forge/maker-squirrel": "^7.6.0",
    "electron": "^34.0.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.1",
    "rimraf": "^5.0.0"
  },
  "build": {
    "appId": "com.buttonpicker.streamingutilities",
    "productName": "ButtonPicker",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!node_modules/*/{README.md,README,readme.md,readme}",
      "!node_modules/.bin",
      "!**/*.md",
      "!**/*.ts",
      "!**/*.map",
      "!dist",
      "!build",
      "!LICENSE",
      "!*.log",
      "!config"
    ],
    "extraResources": [
      {
        "from": "BRCP/",
        "to": "BRCP"
      },
      {
        "from": "buttonPicker/",
        "to": "buttonPicker"
      },
      {
        "from": "coinflip/",
        "to": "coinflip"
      },
      {
        "from": "FNFSPicker/",
        "to": "FNFSPicker"
      },
      {
        "from": "wheelSpin/",
        "to": "wheelSpin"
      },
      {
        "from": "assets/",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "MNIKevin202",
          "repo": "streamingutilities",
          "releaseType": "release"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BR Challenge Picker"
    }
  }
}